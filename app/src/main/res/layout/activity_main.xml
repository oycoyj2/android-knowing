<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/knowing_theme_color">

    <!-- 상단 타이틀 이미지 -->
    <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/knowing_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="210dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnCategorySelection"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/nanum_myeongjo"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="범위 선택"
            android:textColor="@color/knowing_sub_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAddQuiz"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_myeongjo"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="문제 추가"
            android:textColor="@color/knowing_sub_color"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgTitle">

        <Button
            android:id="@+id/btnCategory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/nanum_myeongjo"
            android:text="• 컴퓨터 구조"
            android:textColor="@color/knowing_sub_color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCategory2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/nanum_myeongjo"
            android:text="• 운영체제"
            android:textColor="@color/knowing_sub_color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCategory3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/nanum_myeongjo"
            android:text="• 데이터베이스"
            android:textColor="@color/knowing_sub_color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCategory4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/nanum_myeongjo"
            android:text="• 네트워크"
            android:textColor="@color/knowing_sub_color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCategory5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/nanum_myeongjo"
            android:text="• 자료구조"
            android:textColor="@color/knowing_sub_color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCategory6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:fontFamily="@font/nanum_myeongjo"
            android:text="• 알고리즘"
            android:textColor="@color/knowing_sub_color"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp">

        <android.widget.Button
            android:id="@+id/btnStartQuiz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:background="@drawable/button_white"
            android:fontFamily="@font/nanum_myeongjo"
            android:text="모든 문제 풀기"
            android:textColor="@color/knowing_orange_color"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/btnStartUnknownQuiz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:fontFamily="@font/nanum_myeongjo"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:text="모르는 문제 풀기"
            android:textColor="@color/knowing_orange_color"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
