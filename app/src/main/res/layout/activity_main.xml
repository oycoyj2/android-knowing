<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/btnCategorySelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문제 범위 선택"
        android:backgroundTint="@color/knowing_theme_color"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모든 문제 풀기"
        android:backgroundTint="@color/knowing_theme_color"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnStartUnknownQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/knowing_theme_color"
        android:text="모르는 문제만 풀기"
        android:layout_marginTop="16dp" />

    <!-- 카테고리 1 버튼 -->
    <Button
        android:id="@+id/btnCategory1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/knowing_theme_color"
        android:text="카테고리 1"
        android:layout_marginTop="16dp" />

    <!-- 카테고리 2 버튼 -->
    <Button
        android:id="@+id/btnCategory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/knowing_theme_color"
        android:text="카테고리 2"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnAddQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/knowing_theme_color"
        android:text="퀴즈 추가"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnQuizList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/knowing_theme_color"
        android:text="문제 목록" />

</LinearLayout>
